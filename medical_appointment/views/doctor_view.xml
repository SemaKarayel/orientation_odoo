<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view -->
    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="full_name"/>
                <field name="date_of_birth"/>
                <field name="age"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="department_id"/>
                <field name="shift_start" widget="float_time"/>
                <field name="shift_end" widget="float_time"/>
            </tree>
        </field>
    </record>


    <!-- Form view -->
    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="full_name"/>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="department_id"/>
                            <field name="shift_start" widget="float_time"/>
                            <field name="shift_end" widget="float_time"/>
                        </group>
                    </group>
                </sheet>
                <!--Chatter-->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view for Doctors -->
    <record id="view_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hospital.doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="full_name"
                       filter_domain="['|', ('first_name', 'ilike', self), ('last_name', 'ilike', self)]"/>
                <field name="age"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="department_id"/>

                <filter name="filter_department" string="Has Department" domain="[('department_id', '!=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_department" string="Department" context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_age" string="Age" context="{'group_by': 'age'}"/>
                </group>

                <searchpanel>
                    <field name="department_id" icon="fa-building" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!--Menu Action for Doctor-->
    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first doctor !
            </p>
        </field>
    </record>

    <menuitem id="menu_doctor"
              name="Doctor"
              action="action_hospital_doctor"
              parent="menu_doctor_master"
              sequence="0"/>

</odoo>