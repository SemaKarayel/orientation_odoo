<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Activity view -->
    <record id="view_hospital_appointment_activity" model="ir.ui.view">
        <field name="name">hospital.appointment.activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <activity string="Appointments">
                <field name="patient_id"/>
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image('hospital.patient','image',record.patient_id.raw_value)"
                             t-att-title="record.patient_id.value"
                             t-att-alt="record.patient_id.value"/>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='done'" decoration-danger="state=='cancel'" sample="1" multi_edit="1">
                <field name="full_name"/>
                <field name="patient_id"/>
                <field name="appointment_time"/>
                <field name="gender" optional="hide"/>
                <field name="doctor_ids" widget="many2many_tags"/>
                <field name="booking_date" optional="show"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state"
                       decoration-success="state=='done'"
                       decoration-info="state=='draft'"
                       decoration-danger="state=='cancel'"
                       decoration-warning="state=='in_progress'"
                       widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- State buttons: 'Draft','In Progress','Cancel','Done' -->
                    <button name="action_in_progress" string="In Progress" class="oe_highlight"
                            data-hotkey="x"
                            type="object" states="draft"/>
                    <button name="action_done" string="Mark as Done" class="oe_highlight"
                            data-hotkey="v"
                            type="object" states="in_progress"/>
                    <!--                    <button name="%(medical_appointment.action_cancel_appointment)d" string="Cancel"-->
                    <!--                            data-hotkey="z"-->
                    <!--                            type="object" states="draft,in_progress"/>-->
                    <button name="action_cancel" string="Cancel"
                            data-hotkey="z"
                            type="object" states="draft,in_progress"/>

                    <button name="action_draft" string="Reset to Draft"
                            data-hotkey="r"
                            type="object" states="cancel,done"/>
                    <field name="state" widget="statusbar" nolabel="1"
                           statusbar_visible="draft,in_progress,done"/>
                </header>

                <!-- Sheet with readonly attrs for Done/Cancel -->
                <sheet attrs="{'readonly':[('state','in',['done','cancel'])]}">
                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_open_sale_orders"
                                class="oe_stat_button" icon="fa-shopping-cart">
                            <field string="Sale Orders" name="sale_orders_count" widget="statinfo"/>
                        </button>
                        <button type="object" name="action_open_invoices"
                                class="oe_stat_button" icon="fa-file-text-o">
                            <field string="Invoices" name="invoices_count" widget="statinfo"/>
                        </button>
                        <button type="object" name="action_open_payments"
                                class="oe_stat_button" icon="fa-credit-card">
                            <field string="Payments" name="payments_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="full_name"/>
                            <field name="patient_id"/>
                            <field name="doctor_ids" widget="many2many_tags"/>
                            <field name="gender"/>
                            <field name="booking_date"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                            <field name="hide_sales_price" groups="base.group_no_one"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Prescription">
                            <field name="prescription" placeholder="Enter your prescription"/>
                        </page>
                        <page string="Pharmacy">
                            <field name="pharmacy_line_ids">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="price_unit"
                                           attrs="{'column_invisible':[('parent.hide_sales_price','=',True)]}"/>
                                    <field name="qty"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="price_unit"
                                               attrs="{'column_invisible':[('parent.hide_sales_price','=',True)]}"/>
                                        <field name="qty"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <!--Treatments tab-->
                        <page string="Treatments">
                            <field name="treatment_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="is_done"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action and Menu -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,activity</field>
    </record>

    <menuitem id="menu_appointment" name="Appointment"
              action="action_hospital_appointment"
              parent="menu_appointment_master"
              sequence="10"/>
</odoo>