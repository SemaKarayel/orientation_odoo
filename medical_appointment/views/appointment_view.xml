<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
        decoration-success = GREEN
        decoration-info = LIGHT BLUE
        decoration-danger = RED
        decoration-warning = YELLOW
        decoration-muted = GREY
    -->


    <!-- Activity view -->
    <record id="view_hospital_appointment_activity" model="ir.ui.view">
        <field name="name">hospital.appointment.activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <activity string="Appointments">
                <field name="patient_id"/>
                <field name="ref"/>
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image('hospital.patient', 'image', record.patient_id.raw_value)"
                             t-att-title="record.patient_id.value" t-att-alt="record.patient_id.value"/>
                        <div>
                            <field name="ref" display="full"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state =='done'" decoration-danger="state == 'cancel'" sample="1" multi_edit="1">
                <field name="patient_id"/>
                <field name="appointment_time"/>
                <field name="ref" optional="hide"/>
                <field name="gender" optional="hide"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="booking_date" optional="show"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'draft'"
                       decoration-danger="state == 'cancel'"
                       decoration-warning="state == 'in_consultation'"
                       widget="badge"/>
            </tree>
        </field>
    </record>


    <!-- Form view -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!--Control statusbar using buttons-->
                    <button name="action_in_consultation" string="In Consultation" class="oe_highlight"
                            data-hotkey="y"
                            type="object" states="draft"/>
                    <button name="action_done" string="Mark as Done" class="oe_highlight"
                            data-hotkey="v"
                            type="object" states="in_consultation"/>
                    <button name="action_cancel" string="Cancel"
                            data-hotkey="z"
                            type="object" states="draft,in_consultation"/>
                    <button name="action_draft" string="Reset to Draft" class="oe_highlight"
                            data-hotkey="n"
                            type="object" states="cancel"/>
                    <!--options="{'clickable': '1'}"-->
                    <field name="state" widget="statusbar" nolabel="1"
                           statusbar_visible="draft,in_consultation,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <field name="priority" widget="priority" class="mr-3"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="ref"/>
                            <field name="gender"/>
                            <field name="doctor_id" widget="many2one_avatar"/>
                            <field name="booking_date" help="Date of booking" default_focus="1"/>
                        </group>
                        <group>
                            <field name="hide_sales_price" groups="base.group_no_one"/>
                            <field name="appointment_time"/>
                            <button name="action_test" string="Object Button" type="object"
                                    data-hotkey="i"
                                    help="A message will be printed in the log "
                                    groups="base.group_no_one"
                                    confirm="Are you sure to execute python code ?"
                                    class="oe_highlight"/>
                            <button name="%(medical_appointment.action_hospital_patient)d " string="Action Button"
                                    help="On clicking this button, you will be redirected to patient records."
                                    groups="base.group_no_one"
                                    confirm="Are you sure to open the patient action ?"
                                    data-hotkey="j"
                                    type="action" class="oe_highlight"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Prescription" name="prescription">
                            <field name="prescription" placeholder="Enter your prescription"
                                   options="{'collaborative': true, 'resizable': true, 'codeview': true}"/>
                        </page>

                        <!-- Tree and Form view for pharmacy lines -->
                        <page string="Pharmacy" name="pharmacy">
                            <field name="pharmacy_line_ids">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="price_unit"
                                           attrs="{'column_invisible':[('parent.hide_sales_price', '=', True)]}"/>
                                    <field name="qty"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="price_unit"
                                               attrs="{'column_invisible':[('parent.hide_sales_price', '=', True)]}"/>
                                        <field name="qty"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <!--Chatter-->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--Search view-->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,activity</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment !
            </p>
        </field>
    </record>

    <menuitem id="menu_appointment"
              name="Appointment"
              action="action_hospital_appointment"
              parent="menu_appointment_master"
              sequence="0"/>

</odoo>